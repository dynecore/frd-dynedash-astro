                    <div class="text-3xl text-center uppercase italic text-bolder">
                        <a href="/">Lampa Project</a>
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    <a href="/"
                        ><div class="lowercase first-letter:uppercase p-1">
                            {session_status.toString()}
                        </div></a
                    >
                    {
                        () => {
                            if (session_status) {
                                return (
                                    <>
                                        <a href="/dashboard">
