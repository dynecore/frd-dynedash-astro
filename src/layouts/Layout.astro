                        console.log('sesion expira en', Math.floor((doc.data.expiration - Date.now())/1000))
                        expiration = doc.data.expiration - Date.now()
                    }

                    if (doc.status === "error") {
                        label.textContent = 'error, revisar log'
                    }
                }else{
                    console.log('nodata')
