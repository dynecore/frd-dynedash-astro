let session_status = false;
let session_cookie = 'nocookie'
let expireIn = 0;

if (Astro.cookies.has("__sessiondemo")) {
    session_status = true
    session_cookie = Astro.cookies.get("__sessiondemo")?.value;
    expireIn = JSON.parse(session_cookie.slice(2)).expiration - Date.now();
}

